<h1><%= @category.category_name %> category</h1>

<% if @recipes.any?() %>
  <h3>Here are all the recipes in this category:</h3>
  <table>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><a href="/recipes/<%= recipe.id()%>"><%= recipe.recipe_name %></li></td>
    </tr>
  <% end %>
  </table>
<% end %>
<hr>
<form action="/categories/<%= @category.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-info">Delete this Category</button>
</form>
